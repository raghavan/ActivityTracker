{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": [
    "main/**/*",
    "render/**/*"
  ],
  "exclude": [
    "node_modules",
    "output/**/*"
  ]
}
